{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:start": "nodemon index.js",
    "lint": "eslint --fix api",
    "format": "yarn run prettier --write api",
    "prettier": "prettier \"api/**/*.+(js|jsx|json|yml|yaml|ts|tsx|md)\"",
    "validate": "yarn run lint && yarn run prettier --list-different",
    "seed:db": "node ./seeds/index.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.0.8",
    "apollo-server-express": "^2.0.7",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "fs": "^0.0.1-security",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "graphql-yoga": "^1.16.2",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.14",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run validate"
    }
  }
}
