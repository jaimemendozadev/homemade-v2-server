{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:start": "nodemon index.js",
    "lint": "./node_modules/.bin/eslint --fix api",
    "format": "yarn run prettier -- --write api",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|ts|tsx|md|graphql)\"",
    "validate": "yarn run lint && yarn run prettier -- --list-different",
    "precommit": "lint-staged",
    "seed:db": "node ./seeds/index.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.0.8",
    "apollo-server-express": "^2.0.7",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "fs": "^0.0.1-security",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "graphql-yoga": "^1.16.2",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.14",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2"
  }
}
