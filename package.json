{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:start": "nodemon index.js",
    "generate:mock": "rm -rfv mockJSON/** && node mockData/generateFiles.js",
    "lint": "eslint --fix api && eslint --fix mockData",
    "format": "yarn run prettier --write api",
    "nu:clear": "rm -rfv node_modules && rm -rfv package-lock.json && rm -rfv yarn.lock && rm -rfv yarn-error.log",
    "prettier": "prettier \"api/**/*.+(js|jsx|json|yml|yaml|ts|tsx|md)\" && prettier \"mockData/**/*.+(js|jsx|json|yml|yaml|ts|tsx|md)\"",
    "validate": "yarn run lint && yarn run prettier --list-different",
    "seed:db": "node ./seeds/index.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.6.4",
    "apollo-server-express": "^2.6.4",
    "body-parser": "^1.19.0",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "fs": "^0.0.1-security",
    "graphql": "^14.3.1",
    "graphql-tools": "^3.1.1",
    "graphql-yoga": "^1.18.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.6.0",
    "path": "^0.12.7",
    "random-location": "^1.0.12"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run validate"
    }
  }
}
